<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit comment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
<nav class="nav nav-tabs sticky-top">
    <a class="nav-link" href="/">Home</a>
    <%- include('shared/user_nav.ejs') %>
</nav>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <%- include('shared/alert.ejs') %>
                <div class="card-header">
                    Comment of user <%= comment.author %>
                    <% if (user && user.role === 'moderator') { %>
                        <a href="/user/<%= comment.id_user %>?urlToGoBack=<%- `/comment/${comment.id_comment}` %>">
                            Details</a>
                    <% } %>
                </div>
                <div class="card-body">
                    <form>
                        <input type="hidden" id="id_book" value="<%- comment.id_chapter %>">
                        <input type="hidden" id="id_user" value="<%- comment.id_user %>">
                        <input type="hidden" id="id_comment" value="<%- comment.id_comment %>">
                        <div class="form-group">
                            <label for="text_review">Comment contents</label>
                            <input type="text" class="form-control" id="text_review" name="text_review" required
                                   value="<%= comment.text_comment %>">
                        </div>
                        <div>
                            <label for="public">Publicly available</label>
                            <input type="checkbox" id="public" name="public"
                            <% if (comment.public) { %> checked
                                    <% } %>
                            >
                        </div>
                        <button type="submit" class="btn btn-primary" id="edit">Save new info</button>
                    </form>
                    <a href="<%= urlToGoBack %>" type="submit" class="btn btn-primary" id="go_back">Go back</a>
                    <button type="submit" class="btn btn-danger" id="delete">Delete comment</button>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('shared/alert_js.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
<script src="/views/edit_comment_page.js"></script>
</body>
</html>